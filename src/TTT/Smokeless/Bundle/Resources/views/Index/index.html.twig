{% extends 'TTTSmokelessBundle::layout.html.twig' %}

{% block body %}

    <div id="app"></div>

    {% include 'TTTSmokelessBundle:Index:login.html.twig' %}

    {% include 'TTTSmokelessBundle:Index:form.html.twig' %}

    {% include 'TTTSmokelessBundle:Index:progress.html.twig' %}

    <div id="fb-root"></div>
    <script>
      window.fbAsyncInit = function() {
        FB.init({
          appId      : '{{ fb_id }}',
          channelUrl : 'channel',
          status     : true,
          cookie     : true,
          xfbml      : true
        });

        //$(document).trigger('fb-ready');
      };

      // Load the SDK Asynchronously
      (function(d){
         var js, id = 'facebook-jssdk'; if (d.getElementById(id)) {return;}
         js = d.createElement('script'); js.id = id; js.async = true;
         js.src = '//connect.facebook.net/en_US/all.js';
         d.getElementsByTagName('head')[0].appendChild(js);
       }(document));
    </script>

{% endblock %}